<!-- Philippe's code from passport class -->

<div class="mx-auto form-group" style="width: 300px; margin: 1rem;">

    <h3 style="color: #4E4846;">Log in</h3>
     <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

            <button type="submit" class="btn btn-lg btn-block" style="background-color: #ea4c89; color: white; margin: 30px 0 0 0; padding:0.2rem 0rem;" >Log in</button>
    </form>

     <hr>

    <h6 style="color: #4E4846;">or</h6>
    <h6 style="color: #4E4846;">Log in with <a href="/auth/google" class="btn btn-danger btn-sm">Google+</a></h6>

        <!-- <p>Or, <a href="/signup">Signup</a></p>
        <p>Go back <a href="/">home</a>.</p> -->

</div>