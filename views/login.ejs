<div class="col-sm-6 col-sm-offset-3">
    <h1>Login</h1>
     <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>


            <button type="submit" class="btn btn-lg btn-block" style="background-color: #ea4c89; color: white; margin: 30px 0 0 0; padding:0.2rem 0rem;" >Log in</button>
        </form>

        <hr>


    <h2>Or Login With <a href="/auth/google" class="btn btn-danger btn-lg">Google+</a></h2>

        <!-- <p>Or, <a href="/signup">Signup</a></p>
        <p>Go back <a href="/">home</a>.</p> -->

    </div>
</div>