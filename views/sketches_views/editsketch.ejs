<div class="mx-auto form-group" style="width: 300px; margin: 1rem;">
    <h4 style="margin: 0 0 20px 0;">Edit your sketch here...</h4>

        <form id="giphy-form" method="post" action="/sketches/<%= sketch.id%>/edit?_method=PATCH" >
            <input  class="form-control" type="text" name="title" value="<%= sketch.title %>" placeholder="Title" /><br />
            <% console.log(sketch)%>
            <input class="form-control" type="text" name="tag" value="<%= sketch.tag%>" placeholder="Add a tag" /><br />
            
            <input id="url-field" type="hidden" name="giphy_url" value="<%= sketch.giphy_url%>"/><br />
            <input id="sketchy-url-field" type="hidden" name="imgUrl" value="<%= sketch.imgUrl%>" />
</div>
<div class="mx-auto form-group" style="width: 700px; margin: 1rem;">
            <div class="card ">
            <img class="card-img-right" src="<%= sketch.imgUrl%>">
            <img class="card-img-left"src="<%= sketch.giphy_url%>">
            </div>
</div>
            <br>
            <button class="btn" style="background-color:  #FDBD4C; color:white">Update My Sketchy</button>
        </form>

<form method="post" action="/sketches/<%= sketch.id%>?_method=DELETE">

    <button onclick="return confirm('Are you sure you wnat to delete it?')" class="btn" style="background-color: #67CCC7; color:white; margin:10px 0px 0px 0px;">Delete</button>

</form>
<button class="btn" onclick="window.location.href='/users/<%= user.id%>'" style="background-color: #ea4c89; color:white; margin:10px 0px 0px 0px;">Go back to My Sketchy</button>
